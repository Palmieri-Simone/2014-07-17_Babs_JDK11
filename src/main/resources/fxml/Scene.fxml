<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="it.polito.tdp.babs.FXMLController">
  <!-- TODO Add Nodes -->
  <center>
    <VBox prefHeight="-1.0" prefWidth="-1.0" spacing="5.0">
      <children>
        <HBox prefHeight="-1.0" prefWidth="-1.0" spacing="5.0">
          <children>
            <Label text="Stazione" />
            <ComboBox fx:id="boxStazione" prefHeight="-1.0" prefWidth="175.0">
              <items>
                <FXCollections fx:factory="observableArrayList">
                  <String fx:value="Item 1" />
                  <String fx:value="Item 2" />
                  <String fx:value="Item 3" />
                </FXCollections>
              </items>
            </ComboBox>
            <Button fx:id="btnConta" mnemonicParsing="false" text="Conta viaggi" />
          </children>
        </HBox>
        <HBox prefHeight="-1.0" prefWidth="-1.0" spacing="5.0">
          <children>
            <Label text="Distanza (in km)" />
            <TextField fx:id="txtDistanza" prefWidth="175.0" />
            <Button fx:id="btnCerca" mnemonicParsing="false" text="Cerca stazioni" />
          </children>
        </HBox>
        <TextArea fx:id="txtResult" editable="false" prefWidth="-1.0" wrapText="true" />
      </children>
      <BorderPane.margin>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </BorderPane.margin>
    </VBox>
  </center>
  <top>
    <Label text="Bike Sharing (Bay area) - Turno A">
      <font>
        <Font name="System Bold" size="18.0" />
      </font>
    </Label>
  </top>
</BorderPane>
